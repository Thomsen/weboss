	<build>
		<!-- solved execution http://wiki.eclipse.org/M2E_plugin_execution_not_covered#metadata_source_lookup_order_ -->
		<pluginManagement>
			<plugins>
				<!-- axis2 runtime code -->
				<plugin>
					<groupId>org.apache.axis2</groupId>
					<artifactId>axis2-java2wsdl-maven-plugin</artifactId>
					<version>${axis2.version}</version>
					<configuration>
						<className>com.anyuan.weboss.api.ws.axis2.AttachmentService</className>
						<targetNamespace>http://www.anyuan.com/</targetNamespace>
						<outputFileName>${project.build.directory}/AttachService.wsdl</outputFileName>
					</configuration>
					<executions>
						<execution>
							<phase>process-classes</phase>
							<goals>
								<goal>java2wsdl</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>org.apache.axis2</groupId>
					<artifactId>axis2-wsdl2code-maven-plugin</artifactId>
					<version>${axis2.version}</version>
					<configuration>
						<classpathElements>${project.build.outputDirectory}</classpathElements>
						<wsdlFile>src/main/webapp/AttachmentService.wsdl</wsdlFile>
						<databindingName>xmlbeans</databindingName>
						<packageName>com.anyuan.thomweboss</packageName>
					</configuration>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
								<goal>wsdl2code</goal>
							</goals>
						</execution>
					</executions>

				</plugin>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<executions>
						<execution>
							<phase>generate-sources</phase>
							<goals>
								<goal>add-source</goal>
							</goals>
							<configuration>
								<sources>
									<source>${project.build.directory}/axis2/wsdl2code/src</source>
								</sources>
							</configuration>
						</execution>
					</executions>
				</plugin>

				<!-- maven tomcat, html 403 forbidden 解决1.3不支持注�?,�?�?5以上 -->
				<plugin>
					<groupId>org.apache.tomcat.maven</groupId>
					<artifactId>tomcat7-maven-plugin</artifactId>
					<version>2.1</version>

					<configuration>
						<url>http://localhost:8080/manager/text</url>
						<server>tomcat7</server>
						<username>tomcat-ms</username>
						<password>tomcat</password>
						<path>${project.build.filename}</path>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<skipTests>true</skipTests>
					</configuration>
				</plugin>

				<!-- org.eclipse.jetty jdk1.7 -->
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>jetty-maven-plugin</artifactId>
					<configuration>
						<connectors>
							<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
								<port>9090</port>
							</connector>
						</connectors>
						<scanIntervalSeconds>10</scanIntervalSeconds>
						<stopPort>9090</stopPort>
						<webApp>
							<contextPath>/</contextPath>
						</webApp>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
